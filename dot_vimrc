" @jdahm's vimrc
"

call plug#begin('~/.vim/plugged')
Plug 'tpope/sensible'
Plug 'tpope/abolish'
Plug 'tpope/surround'
Plug 'tpope/unimpaired'
Plug 'tpope/repeat'
Plug 'tpope/fugitive'
Plug 'tpope/rhubarb'
call plug#end()


" esc in insert & visual mode
inoremap kj <esc>

" esc in visual and command mode
" vnoremap kj <esc>
" cnoremap kj <C-C>

" shorten timeout after 'j'
set timeoutlen=300

let mapleader = "\<Space>"

map <leader>e :bufdo e!<CR>
map <leader>w :write<CR>
map <leader>q :quit<CR>
map <leader>b :bdelete<CR>
