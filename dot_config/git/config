[core]
	editor = "vim"

[fetch]
	prune = true

[init]
	defaultBranch = "main"

[interactive]
	diffFilter = "delta --color-only"

[pull]
	rebase = "merges"

[push]
	default = "simple"

[user]
	email = "johann.dahm@gmail.com"
	name = "Johann Dahm"

[color]
	branch = auto
	diff = auto
	status = auto
	showbranch = auto
	ui = true

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[url "git://gist.github.com/"]
	insteadOf = "gist:"

[url "git://github.com/"]
	insteadOf = "github:"

[url "git@gist.github.com:"]
	insteadOf = "gst:"
	pushInsteadOf = "gist:"

[url "git@github.com:github"]
	insteadOf = "github:github"

[alias]
	st = status -s
	br = branch
	cm = commit
	co = checkout
	re = restore
	sw = switch
	dif = diff
	pus = push
	pu = pull
	pick = cherry-pick
	amend = commit --amend
	authors-list = shortlog -e -s -n
	authors-count = shortlog -s -n
	cob = checkout -b
	smartlog = log --graph --pretty=format:'commit: %C(bold red)%h%Creset %C(red)<%H>%Creset %C(bold magenta)%d %Creset%ndate: %C(bold yellow)%cd %Creset%C(yellow)%cr%Creset%nauthor: %C(bold blue)%an%Creset %C(blue)<%ae>%Creset%n%C(cyan)%s%n%Creset'
	sl = !git smartlog
	me = !git smartlog --author='Johann Dahm'
	log-commit = log -1 --pretty=format:'commit: %C(bold red)%h%Creset %C(red)<%H>%Creset %C(bold magenta)%d %Creset%ndate: %C(bold yellow)%cd %Creset%C(yellow)%cr%Creset%nauthor: %C(bold blue)%an%Creset %C(blue)<%ae>%Creset%n%n%C(bold cyan)%s%n%n%C(cyan)%b%n%Creset'
	logcm = !git log-commit
	ls = log --oneline
	nuke = reset --hard
	purge = clean -fd
	revertfile = "checkout --"
	unstage = "reset HEAD --"
	trim = "!f() { git branch | grep -v "main" | grep -v "master" | grep -v "^*" | xargs git branch -D; git remote prune origin; }; f"
	uncommit = reset --soft HEAD^


[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process

[commit]
	gpgsign = true
