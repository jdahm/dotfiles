#!/usr/bin/env fish

if test (count $argv) -ne 1
    echo "USAGE: get_brew_desc <pkg>"
    exit 1
end

set pkg $argv[1]

set formula_desc (brew info $pkg --json=v2 | jq -r ".formulae[0].desc")
if test "$formula_desc" != "null"
    echo $formula_desc
    exit
end

set cask_desc (brew info $pkg --json=v2 | jq -r ".casks[0].desc")
if test "$cask_desc" != "null"
    echo $cask_desc
    exit
end
